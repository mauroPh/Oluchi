@model Oluchi.Models.ViewModels.ArtistaFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Artista</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Artista.Id" />
            <div class="form-group">
                <label asp-for="Artista.Nome" class="control-label"></label>
                <input asp-for="Artista.Nome" class="form-control" />
                <span asp-validation-for="Artista.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artista.Email" class="control-label"></label>
                <input asp-for="Artista.Email" class="form-control" />
                <span asp-validation-for="Artista.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artista.BirthDate" class="control-label"></label>
                <input asp-for="Artista.BirthDate" class="form-control" />
                <span asp-validation-for="Artista.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artista.ValorBase" class="control-label"></label>
                <input asp-for="Artista.ValorBase" class="form-control" />
                <span asp-validation-for="Artista.ValorBase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artista.CategoriaId" class="control-label"></label>
                <select asp-for="Artista.CategoriaId" asp-items="@(new SelectList(Model.Categorias,"Id","Nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
