@model IEnumerable<Oluchi.Models.Artista>

@{
    ViewData["Title"] = "Artistas";
}

<h2>Início</h2>

<p>
    <a asp-action="Create">Adicionar novo artista</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="warning">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorBase)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BirthDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ValorBase)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
        <a asp-action="Details" asp-route-id="@item.Id">Ver Detalhes</a> |
        <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
    </td>
</tr>}
    </tbody>

</table>

