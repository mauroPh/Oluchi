@model IEnumerable<Oluchi.Models.Agenda>

@{
    ViewData["Title"] = "Busca Simples";
}

<h2>@ViewData["Title"]</h2>
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="minDate">Data Inicial</label>
                    <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
                </div>
                <div class="form-group">
                    <label for="maxDate">Data Final</label>
                    <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
                </div>
            </div>
            <button type="submit" class="btn btn-dark">Filtrar</button>
        </form>
    </div>
</nav>
<div class="panel">
    <div class="panel-heading"  style="background-color:#F49E0B">
        <h3 class="panel-title">Total Arrecadado = @Model.Sum(obj => obj.Quantia).ToString("F2")</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="warning">
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Data)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Artista)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Artista.Categoria)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Valor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Artista.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Artista.Categoria.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
    </tr>}
            </tbody>
        </table>
    </div>
</div>